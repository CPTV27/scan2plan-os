# Scan2Plan OS - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ===========================================
# CORE CONFIGURATION
# ===========================================

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/scan2plan

# Application URL (used for email links, webhooks, etc.)
# In production, set this to your deployed domain (e.g., https://yourdomain.com)
APP_URL=http://localhost:5000

# Session Management
SESSION_SECRET=generate_a_secure_random_string_here_minimum_32_chars

# ===========================================
# AUTHENTICATION
# ===========================================

# Development Mode (enables auto-login bypass for local testing)
# Set to 'true' for local development, 'false' or remove for production
AUTH_DEV_MODE=true

# Dev user email (used when AUTH_DEV_MODE=true)
DEV_USER_EMAIL=admin@scan2plan.io

# Email domain restriction (leave blank to disable)
# ALLOWED_EMAIL_DOMAIN=scan2plan.io
# DISABLE_EMAIL_RESTRICTION=true  # Set to 'true' to allow any email

# ===========================================
# GOOGLE APIS
# ===========================================

# Google Service Account (recommended for server-to-server auth)
# Export your service account JSON and paste it here as a single line
# GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"...","private_key":"..."}

# OR use a direct access token for development/testing
# GOOGLE_ACCESS_TOKEN=your_google_oauth_access_token

# Google Maps API Key (for address autocomplete and geocoding)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Google Chat API (for notifications)
GOOGLE_CHAT_API_KEY=your_google_chat_api_key_here
GOOGLE_CHAT_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}

# ===========================================
# HUBSPOT INTEGRATION
# ===========================================

# HubSpot Private App Access Token
# Create at: HubSpot > Settings > Integrations > Private Apps
HUBSPOT_ACCESS_TOKEN=your_hubspot_private_app_access_token

# ===========================================
# OTHER INTEGRATIONS
# ===========================================

# Airtable Integration
AIRTABLE_API_KEY=pat_your_airtable_api_key_here
AIRTABLE_BASE_ID=app_your_base_id_here

# QuickBooks OAuth
QUICKBOOKS_CLIENT_ID=your_quickbooks_client_id_here
QUICKBOOKS_CLIENT_SECRET=your_quickbooks_client_secret_here
QUICKBOOKS_REDIRECT_URI=http://localhost:5000/api/quickbooks/callback

# PandaDoc Integration
PANDADOC_API_KEY=your_pandadoc_api_key_here

# CPQ API Key (for external integrations calling INTO the CRM)
CPQ_API_KEY=your_cpq_api_key_here

# ===========================================
# OPTIONAL INTEGRATIONS
# ===========================================

# GoHighLevel CRM
# GHL_API_KEY=your_ghl_api_key_here
# GHL_LOCATION_ID=your_ghl_location_id_here

# Perplexity AI
# PERPLEXITY_API_KEY=your_perplexity_api_key_here

# GitHub CI Integration (for triggering tests from Settings)
# GITHUB_TOKEN=ghp_your_github_pat_here

# X.com (Twitter) API Integration
# X_CLIENT_ID=your_x_client_id_here
# X_CLIENT_SECRET=your_x_client_secret_here
# X_CALLBACK_URL=http://localhost:5000/api/x/callback

# DocuSeal E-Signature (Self-hosted)
# DOCUSEAL_URL=http://localhost:3001
# DOCUSEAL_API_KEY=your_docuseal_api_key_here
# DOCUSEAL_WEBHOOK_SECRET=your_webhook_secret_here

# ChromaDB Vector Database (for Smart Project Matching)
# Run: docker run -p 8000:8000 chromadb/chroma
# CHROMA_URL=http://localhost:8000

# Mautic Marketing Automation (Self-hosted)
# MAUTIC_URL=http://localhost:8080
# MAUTIC_API_USER=admin
# MAUTIC_API_PASSWORD=your_mautic_password
# MAUTIC_DB_PASSWORD=secure_db_password
